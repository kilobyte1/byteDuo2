<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/orderItemorderNumberTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Order #12345"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/ic_launcher_background"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/orderItemorderDateTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date: 2023-12-14"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_marginBottom="4dp"/>




    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:textColor="#8E542F"
            android:id="@+id/orderItemitemNameAndQtyTextView"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:textColor="#0E0E0E"
            android:id="@+id/orderPaymentType"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/orderStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Status:"
            android:textSize="20sp"
            android:layout_gravity="center"
            android:layout_marginRight="10dp"
            android:textColor="@color/black"/>



        <ToggleButton
            android:id="@+id/toggleCollectPreparing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textOff="Preparing"
            android:textOn="Collect"
            android:background="@drawable/rounded_btn"
            android:layout_marginTop="8dp"/>

        <Button
            android:id="@+id/completeButton"
            android:layout_width="134dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/rounded_btn"
            android:text="Complete Order" />

    </LinearLayout>

</LinearLayout>
